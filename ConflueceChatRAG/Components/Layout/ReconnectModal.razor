<dialog id="components-reconnect-modal" data-nosnippet>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-4">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="components-reconnect-first-attempt-visible mb-0">
                    Reconnecting...
                </p>
                <p class="components-reconnect-repeated-attempt-visible mb-0">
                    Reconnecting failed. Retrying in <span id="components-seconds-to-next-attempt"></span> seconds...
                </p>
                <div class="components-reconnect-failed-visible">
                    <p class="text-danger mb-3">Connection lost. Please retry or reload the page.</p>
                    <button id="components-reconnect-button" class="btn btn-primary">Retry</button>
                </div>
                <div class="components-pause-visible">
                    <p class="text-warning mb-3">The session has been paused by the server.</p>
                    <button id="components-resume-button" class="btn btn-primary">Resume</button>
                </div>
                <p class="components-resume-failed-visible text-danger mb-0">
                    Failed to resume. Please reload the page.
                </p>
            </div>
        </div>
    </div>
</dialog>

<style>
    #components-reconnect-modal {
        border: none;
        padding: 0;
        background: rgba(0, 0, 0, 0.5);
        display: none;
    }

    #components-reconnect-modal::backdrop {
        background: rgba(0, 0, 0, 0.5);
    }

    #components-reconnect-modal[open] {
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .components-reconnect-first-attempt-visible,
    .components-reconnect-repeated-attempt-visible,
    .components-reconnect-failed-visible,
    .components-pause-visible,
    .components-resume-failed-visible {
        display: none;
    }
</style>
